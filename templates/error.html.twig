<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
			{% endblock %}
		</title>
		<link href="{{asset('images/pokeball.ico')}}" rel="shortcut icon" type="image/x-icon">
		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<nav class="flex justify-between container">
			{% set currentRoute = app.request.attributes.get('_route') %}
			{% set currentParams = app.request.attributes.get('_route_params') %}
			<div class="">
				<a href="{{ path('index') }}" class="mr-40 hover">{{ "Pok√©dex"|trans }}</a>
				<a href="{{ path('teambuild') }}" class="mr-40 hover">{{ "Team build"|trans }}</a>
				<a href="{{ path('table_type') }}" class="mr-40 hover">{{ "Type chart"|trans }}</a>
				<a href="{{ path('cobbleverse') }}" class="hover">Cobbleverse</a>
			</div>
			<div class="">
				<a href="{{ path(currentRoute, currentParams|merge({'_locale': 'fr'})) }}" class="hover">FR</a>
				/
				<a href="{{ path(currentRoute, currentParams|merge({'_locale': 'en'})) }}" class="hover">EN</a>
			</div>
			
		</nav>

		{{ message }}

		<footer></footer>
	</body>
</html>
