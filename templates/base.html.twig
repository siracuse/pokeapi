<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<nav class="flex justify-between container">
			{% set currentRoute = app.request.attributes.get('_route') %}
			{% set currentParams = app.request.attributes.get('_route_params') %}
			<div class="">
				<a href="{{ path('index') }}" class="mr-40 hover">{{ "Pokedex"|trans }}</a>
				<a href="{{ path('teambuild') }}" class="mr-40 hover">{{ "Team build"|trans }}</a>
				<a href="{{ path('table_type') }}" class="mr-40 hover">{{ "Type chart"|trans }}</a>
				<a href="{{ path('cobbleverse') }}" class="hover">Cobbleverse</a>
			</div>
			<div class="">
				<a href="{{ path(currentRoute, currentParams|merge({'_locale': 'fr'})) }}" class="hover">FR</a>
				/
				<a href="{{ path(currentRoute, currentParams|merge({'_locale': 'en'})) }}" class="hover">EN</a>
			</div>
			
		</nav>


		{% block body %}{% endblock %}
	</body>
</html>
