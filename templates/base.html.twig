<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
			{% endblock %}
		</title>
		<link rel="icon" href="{{asset('images/pokeball.ico')}}" >
		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<nav class="flex justify-between container">
			{% set current_route = app.request.get('_route') %}
			{% set current_params = app.request.get('_route_params') %}
			<div class="">
				<a href="{{ path('index') }}" class="mr-40 hover">{{ "Pok√©dex"|trans }}</a>
				<a href="{{ path('teambuild') }}" class="mr-40 hover">{{ "Team build"|trans }}</a>
				<a href="{{ path('table_type') }}" class="mr-40 hover">{{ "Type chart"|trans }}</a>
				<a href="{{ path('cobbleverse') }}" class="hover">Cobbleverse</a>
			</div>
			<div class="">
				<a href="{{ path(current_route, current_params|merge({'_locale': 'fr'})) }}" class="hover">FR</a>
				/
				<a href="{{ path(current_route, current_params|merge({'_locale': 'en'})) }}" class="hover">EN</a>
			</div>
			
		</nav>

		{% block body %}{% endblock %}

		<footer></footer>
	</body>
</html>
